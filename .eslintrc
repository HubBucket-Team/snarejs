{
	"extends": "airbnb",
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},

	"rules": {
		"no-tabs": 0,
		"indent": ["error", "tab"],
		"comma-dangle": 0,
		"no-shadow": 0,
		"arrow-parens": ["error", "as-needed"],
		"no-underscore-dangle": 0,
		"no-new-func": 0,
		"prefer-const": ["error", {"destructuring": "all"}],
		"no-param-reassign": ["error", { "props": false }]
	}
}